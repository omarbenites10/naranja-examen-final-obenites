<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Asignar Profesor a Curso</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="/lib/animate/animate.min.css" rel="stylesheet">
  <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
</head>

<body>
  <%- include('../partials/navbar', { usuario: usuario }) %>

    <div class="container py-5">
      <h1 class="text-center mb-4 text-primary">Asignar Profesor a Curso</h1>

      <% if (error) { %>
        <div class="alert alert-danger text-center">
          <%= error %>
        </div>
        <% } %>

          <form action="/admin/asignar-profesor" method="POST" class="bg-light p-4 rounded shadow-sm">
            <div class="mb-3">
              <label for="email_usuario" class="form-label">Seleccioná un Profesor:</label>
              <select name="email_usuario" id="email_usuario" class="form-select" required>
                <% profesores.forEach(prof=> { %>
                  <option value="<%= prof.email_usuario %>">
                    <%= prof.nombre %> (<%= prof.email_usuario %>)
                  </option>
                  <% }) %>
              </select>
            </div>

            <div class="mb-4">
              <label for="id_curso" class="form-label">Seleccioná un Curso:</label>
              <select name="id_curso" id="id_curso" class="form-select" required>
                <% cursos.forEach(curso=> { %>
                  <option value="<%= curso.id_curso %>">
                    <%= curso.nombre %>
                  </option>
                  <% }) %>
              </select>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>Asignar Profesor
              </button>
            </div>
          </form>
    </div>

    <%- include('../partials/footer') %>

      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
      <script src="/js/main.js"></script>
</body>

</html>