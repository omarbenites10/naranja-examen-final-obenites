<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Estad√≠sticas Generales</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="/lib/fontawesome/css/all.min.css" rel="stylesheet">
</head>
<body>
  <%- include("../partials/navbar") %>

  <div class="container mt-5">
    <h1 class="text-center mb-4">üìä Estad√≠sticas Generales</h1>

    <div class="mb-4">
      <a href="/admin/home" class="btn btn-link">‚Üê Volver al panel de Admin</a>
    </div>

    <div class="row">
      <!-- Cursos Publicados -->
      <div class="col-md-4 mb-4">
        <div class="card text-white bg-success h-100">
          <div class="card-body text-center">
            <h5 class="card-title">Cursos Publicados</h5>
            <p class="display-6"><%= cursosPublicados %></p>
          </div>
        </div>
      </div>

      <!-- Cursos No Publicados -->
      <div class="col-md-4 mb-4">
        <div class="card text-white bg-danger h-100">
          <div class="card-body text-center">
            <h5 class="card-title">Cursos NO Publicados</h5>
            <p class="display-6"><%= cursosNoPublicados %></p>
          </div>
        </div>
      </div>

      <!-- Usuarios Inscriptos a Curso -->
      <div class="col-md-4 mb-4">
        <div class="card text-white" style="background-color: #0d6efd;">
          <div class="card-body text-center">
            <h5 class="card-title">Usuarios Inscriptos</h5>
            <p class="display-6"><%= totalUsuariosInscriptos %></p>
          </div>
        </div>
      </div>

      <!-- Usuarios Asignados como Profesor -->
      <div class="col-md-6 mb-4">
        <div class="card text-white bg-warning h-100">
          <div class="card-body text-center">
            <h5 class="card-title">Usuarios Profesores</h5>
            <p class="display-6"><%= totalProfesores %></p>
          </div>
        </div>
      </div>

      <!-- Total de Usuarios -->
      <div class="col-md-6 mb-4">
        <div class="card text-white bg-secondary h-100">
          <div class="card-body text-center">
            <h5 class="card-title">Total de Usuarios</h5>
            <p class="display-6"><%= totalUsuarios %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("../partials/footer") %>
</body>
</html>
