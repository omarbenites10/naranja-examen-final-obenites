<%- include('../partials/navbar') %>

    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">Categoría</h6>
                <h1 class="mb-5">
                    <%= categoria.nombre %>
                </h1>
            </div>

            <div class="row g-4 justify-content-center">
                <% if (cursos.length> 0) { %>
                    <% cursos.forEach(curso=> { %>
                        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="course-item bg-light">
                                <img class="img-fluid" src="/assets/cursos/<%= curso.imagen || 'generica.jpg' %>"
                                    alt="<%= curso.nombre %>">
                                <div class="text-center p-4 pb-0">
                                    <h5 class="mb-3">
                                        <%= curso.nombre %>
                                    </h5>
                                    <p class="mb-2">Inscriptos: <strong>
                                            <%= curso.cantidad_inscriptos || 0 %>
                                        </strong></p>
                                    <p class="mb-2">Precio: <strong>$<%= Number(curso.precio).toFixed(2) %></strong></p>
                                    <p class="mb-3">Estrellas:
                                        <% for (let i=0; i < Math.round(curso.estrellas); i++) { %>
                                            <i class="fa fa-star text-warning"></i>
                                            <% } %>
                                                <% for (let i=Math.round(curso.estrellas); i < 5; i++) { %>
                                                    <i class="fa fa-star text-secondary"></i>
                                                    <% } %>
                                    </p>
                                </div>
                                <div class="d-flex border-top">
                                    <a href="/auth/curso/<%= curso.id_curso %>" class="btn btn-primary w-100 m-2">Ver
                                        curso</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p class="text-center">No hay cursos disponibles en esta categoría.</p>
                                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>